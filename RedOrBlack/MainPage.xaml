        <Grid Width="300" HorizontalAlignment="Center" Margin="0" Height="299" VerticalAlignment="Center">

            <Grid Height="140" Width="300" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Top">

                <Image Source="Assets/black.png" VerticalAlignment="Top" Margin="0,0,160,0" Tapped="Tapped_Black" Height="140" Width="140"/>
                <Image HorizontalAlignment="Left" Height="140" Margin="160,0,0,0" VerticalAlignment="Top" Width="140" RenderTransformOrigin="0.004,-0.212" Source="Assets/red.png" Tapped="Tapped_Red"/>
            </Grid>
            <Grid HorizontalAlignment="Center" Height="50"  Width="250" Margin="0" VerticalAlignment="Bottom">
                <Image x:Name="answer1" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" Source="Assets/smalldefault.png"/>

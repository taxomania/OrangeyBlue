                <Image x:Name="answer3" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" Source="Assets/smalldefault.png" Margin="50,0,0,0"/>
                <Image x:Name="answer4" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" Source="Assets/smalldefault.png" Margin="75,0,0,0"/>
                <Image x:Name="answer5" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" Source="Assets/smalldefault.png" Margin="100,0,0,0"/>
                <Image x:Name="answer6" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" Source="Assets/smalldefault.png" Margin="125,0,0,0"/>
                <Image x:Name="answer7" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" Source="Assets/smalldefault.png" Margin="150,0,0,0"/>
                <Image x:Name="answer8" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" Source="Assets/smalldefault.png" Margin="175,0,0,0"/>
                <Image x:Name="answer9" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" Source="Assets/smalldefault.png" Margin="200,0,0,0"/>
                <Image x:Name="answer10" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" Source="Assets/smalldefault.png" Margin="225,0,0,0"/>


                <Image x:Name="answer11" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" Source="Assets/smalldefault.png" Margin="0,25,0,0"/>
                <Image x:Name="answer12" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" Source="Assets/smalldefault.png" Margin="25,25,0,0"/>
                <Image x:Name="answer13" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" Source="Assets/smalldefault.png" Margin="50,25,0,0"/>
                <Image x:Name="answer14" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" Source="Assets/smalldefault.png" Margin="75,25,0,0"/>
                <Image x:Name="answer15" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" Source="Assets/smalldefault.png" Margin="100,25,0,0"/>
                <Image x:Name="answer16" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" Source="Assets/smalldefault.png" Margin="125,25,0,0"/>
